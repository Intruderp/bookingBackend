extends base

block content 
    main.main.container 
        .row 
            .card-container
            each mentor in mentors
                .col-lg-12.mt-5
                    .card
                        .card__header
                            .card__picture
                                .card__picture-overlay &nbsp;
                                img.card__picture-img(src=`/img/tours/${mentor.imageCover}`, alt=`${mentor.name}`)
                            h3.heading-tertirary
                                span= mentor.name
                        .card__details
                            h4.card__sub-heading= `${mentor.domain}`
                            p.card__text= mentor.summary
                        .card__footer
                            p
                                span.card__footer-value= `$500`
                                | 
                                span.card__footer-text per person
                            p.card__ratings
                                span.card__footer-value= mentor.ratingsAverage
                                | 
                                span.card__footer-text= `rating (${mentor.ratingsQuantity})`
                            a.btn.btn--green.btn--small(href=`/page`) Send A Message
    